programa ejercicio1
procesos
  proceso hacerAvenida(ES cantFlores: numero)
  comenzar
    repetir 9
      mientras(HayFlorEnLaEsquina)
        tomarFlor
        cantFlores:= cantFlores + 1
      mover
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cantFlores:= cantFlores + 1
  fin
areas
  ciudad: AreaPC(1,1,100,100)
robots
  robot tipo1
  variables
    cantFlores: numero
    cantFlores2: numero
  comenzar
    cantFlores:= 0
    hacerAvenida(cantFlores)
    EnviarMensaje(cantFlores,robot2)
    RecibirMensaje(cantFlores2,robot2)
    si(cantFlores2 < cantFlores)
      Informar(cantFlores)
  fin
  robot tipo2
  variables
    cantFlores: numero
    cantFlores2: numero
  comenzar
    cantFlores:= 0
    hacerAvenida(cantFlores)
    EnviarMensaje(cantFlores,robot1)
    RecibirMensaje(cantFlores2,robot1)
    si(cantFlores2 < cantFlores)
      Informar(cantFlores)
  fin   
variables
  robot1: tipo1
  robot2: tipo2
comenzar
  AsignarArea(robot1,ciudad)
  AsignarArea(robot2,ciudad)
  Iniciar(robot1,1,1)
  Iniciar(robot2,2,11)
fin