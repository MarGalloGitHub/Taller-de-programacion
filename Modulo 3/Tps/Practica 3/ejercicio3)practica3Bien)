programa ejercicio3
procesos
  proceso mandarUbicacion(E AvAle: numero ; E CalleAle: numero)
  comenzar
    EnviarMensaje(AvAle,robot1)
    EnviarMensaje(CalleAle,robot1)
    EnviarMensaje(AvAle,robot2)
    EnviarMensaje(CalleAle,robot2)
    EnviarMensaje(AvAle,robot3)
    EnviarMensaje(CalleAle,robot3)
    EnviarMensaje(AvAle,robot4)
    EnviarMensaje(CalleAle,robot4)
  fin
  proceso actualizarMaximo(E cantCOMP: numero ; ES cantMax: numero ; E quien: numero ; ES robotMax: numero)
  comenzar
    si(cantCOMP > cantMax)
      cantMax:= cantCOMP
      robotMax:= quien
  fin
  proceso recibir(E quien: numero ; ES cantMax: numero ; ES robotMax: numero)
  variables
    cantCOMP: numero
  comenzar
    si(quien = 1)
      RecibirMensaje(cantCOMP,robot1)
    sino
      si(quien = 2)
        RecibirMensaje(cantCOMP,robot2)
      sino
        si(quien = 3)
          RecibirMensaje(cantCOMP,robot3)
        sino
          si(quien = 4)
            RecibirMensaje(cantCOMP,robot4)
    actualizarMaximo(cantCOMP,cantMax,quien,robotMax)
  fin
areas 
  areaJ: AreaP(1,1,1,1)
  area1: AreaP(2,1,2,1)
  area2: AreaP(3,1,3,1)
  area3: AreaP(4,1,4,1)
  area4: AreaP(5,1,5,1)
  areaTrabajo: AreaPC(2,2,10,10)
robots
  robot tipo1
  variables
    quien: numero
    AvAle: numero
    CalleAle: numero
    cantMax: numero
    robotMax: numero
  comenzar
    cantMax:= 1
    EnviarMensaje(1,robot1)
    EnviarMensaje(2,robot2)
    EnviarMensaje(3,robot3)
    EnviarMensaje(4,robot4)
    Random(AvAle,2,10)
    Random(CalleAle,2,10)
    mandarUbicacion(AvAle,CalleAle)
    repetir 4
      RecibirMensaje(quien,*)
      recibir(quien,cantMax,robotMax)
    Informar(robotMax)
  fin
  robot tipo2
  variables 
    quien: numero
    cantFlores: numero
    AvAle: numero
    CalleAle: numero
    IniAv: numero
    IniCa: numero
    hay: boolean
  comenzar
    hay:= V
    IniAv:= PosAv
    IniCa:= PosCa
    cantFlores:= 0
    RecibirMensaje(quien,jefe)
    RecibirMensaje(AvAle,jefe)
    RecibirMensaje(CalleAle,jefe)
    mientras(hay = V)
      BloquearEsquina(AvAle,CalleAle)
      Pos(AvAle,CalleAle)
      si(HayFlorEnLaEsquina)
        tomarFlor
        cantFlores := cantFlores + 1
      sino
        hay:= F
      Pos(IniAv,IniCa)
      LiberarEsquina(AvAle,CalleAle)
    EnviarMensaje(quien,jefe)
    EnviarMensaje(cantFlores,jefe)
  fin
variables
  jefe: tipo1
  robot1: tipo2
  robot2: tipo2
  robot3: tipo2
  robot4: tipo2
comenzar
  AsignarArea(jefe,areaJ)
  AsignarArea(robot1,area1)
  AsignarArea(robot2,area2)
  AsignarArea(robot2,area2)
  AsignarArea(robot3,area3)
  AsignarArea(robot4,area4)
  AsignarArea(robot1,areaTrabajo)
  AsignarArea(robot2,areaTrabajo)
  AsignarArea(robot3,areaTrabajo)
  AsignarArea(robot4,areaTrabajo)
  Iniciar(jefe,1,1)
  Iniciar(robot1,2,1)
  Iniciar(robot2,3,1)
  Iniciar(robot3,4,1)
  Iniciar(robot4,5,1)
fin