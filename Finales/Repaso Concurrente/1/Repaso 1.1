programa ejercicioUno
procesos
  proceso juntar(ES flor:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      flor:= flor + 1
  fin
  proceso recorrido(ES flores: numero)
  variables
    esquinaSin: numero
  comenzar
    esquinaSin:= 0
    flores:= 0
    mientras(PosCa <= 99)
      si(HayFlorEnLaEsquina)
        juntar(flores)
      sino
        esquinaSin:= esquinaSin + 1
      mover
    si(HayFlorEnLaEsquina)
      juntar(flores)
    sino
      esquinaSin:= esquinaSin + 1
    depositar(flores)
  fin
  proceso depositar(ES flores: numero)
  comenzar
    repetir(flores)
      depositarFlor
    Informar(flores)
  fin
areas
  area1: AreaP(1,1,1,100)
  area2: AreaP(3,1,3,100)
  area3: AreaP(5,1,5,100)
robots
  robot tipo1
  variables
    f:numero
  comenzar
    recorrido(f)
  fin
variables
  robot1: tipo1
  robot2: tipo1
  robot3: tipo1
comenzar
  AsignarArea(robot1,area1)
  AsignarArea(robot2,area2)
  AsignarArea(robot3,area3)
  Iniciar(robot1,1,1)
  Iniciar(robot2,3,1)
  Iniciar(robot3,5,1)
fin
