programa ejercicioCinco
procesos
  proceso juntarF(ES flores:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      flores:= flores + 1
  fin
  proceso juntarP(ES papeles:numero)
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      papeles:=papeles + 1
  fin
  proceso recorridoA(E distancia: numero)
  variables
    flores: numero
    avenida:numero
  comenzar
    avenida:= PosAv
    flores:= 0
    repetir distancia
      juntarF(flores)
      mover
    juntarF(flores)
    repetir flores
      depositarFlor
    flores:= 0
    Pos(avenida,PosCa - 5)
    repetir distancia
      juntarF(flores)
      mover
    juntarF(flores)
    repetir flores
      depositarFlor 
  fin
  proceso recorridoB(E distancia: numero)
  variables
    papeles: numero
    calle:numero
  comenzar
    calle:= PosCa
    papeles:= 0
    repetir distancia
      juntarP(papeles)
      mover
    juntarP(papeles)
    repetir papeles
      depositarPapel
    papeles:= 0
    Pos(PosAv + 5 , calle)
    repetir distancia
      juntarP(papeles)
      mover
    juntarP(papeles)
    repetir papeles
      depositarPapel
  fin
areas
  area1: AreaC(1,1,100,100)
robots
  robot tipo1
  comenzar
    derecha
    recorridoA(15)
  fin
  robot tipo3
  comenzar
    derecha
    recorridoA(30)
  fin
  robot tipo2
  comenzar
    recorridoB(20)
  fin
  robot tipo4
  comenzar
    recorridoB(10)
  fin
variables
  robot1: tipo1
  robot2: tipo2
  robot3: tipo3
  robot4: tipo4
comenzar
  AsignarArea(robot1,area1)
  AsignarArea(robot2,area1)
  AsignarArea(robot3,area1)
  AsignarArea(robot4,area1)
  Iniciar(robot1,1,80)
  Iniciar(robot3,70,15)
  Iniciar(robot2,75,80)
  Iniciar(robot4,10,1)
fin
