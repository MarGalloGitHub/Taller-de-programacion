programa ejercicioTres
procesos
  proceso juntar(ES flores: numero ; ES papeles: numero)
  variables
    fJuntadas:numero
    pJuntados:numero
  comenzar
    fJuntadas:= 0
    pJuntados:= 0
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      flores:= flores + 1
      fJuntadas:= fJuntadas + 1
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      papeles:= papeles + 1
      pJuntados:= pJuntados + 1
    repetir fJuntadas
      depositarFlor
    repetir pJuntados
      depositarPapel
  fin
  proceso recorrido(E distancia: numero ; ES cumple: boolean)
  variables
    flores:numero
    papeles: numero
  comenzar
    flores:= 0
    papeles:= 0
    repetir distancia
      juntar(flores,papeles)
      mover
    derecha
    repetir distancia
      juntar(flores,papeles)
      mover
    flores:= flores + 1
    si(papeles = flores)
      cumple:= V
  fin
areas
  area1: AreaC(1,1,100,100)
robots
  robot tipo1
  variables
    distancia: numero
    cantCumple: numero
    cumple: boolean
  comenzar
    cantCumple:= 0
    distancia:= 1
    repetir 4
      cumple:= F
      recorrido(distancia , cumple)
      si(cumple = V)
        cantCumple:= cantCumple + 1
      repetir 3
        derecha
      distancia:= distancia + 1
    Informar(cantCumple)
  fin
