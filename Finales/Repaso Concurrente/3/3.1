programa ejercicioUno
procesos
  proceso depositar(ES material:numero ; E cual: boolean ; E av:numero ; E ca:numero)
  comenzar
    BloquearEsquina(10,10)  
    Pos(10,10)
    repetir material
      si(cual = V)
        depositarFlor
      sino
        depositarPapel
    Pos(av,ca)
    LiberarEsquina(10,10)
  fin
  proceso juntarFlores(ES flores:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      flores:= flores + 1
  fin
  proceso juntarPapeles(ES papeles:numero)
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      papeles:= papeles + 1
  fin
areas
  areaFlores: AreaPC(1,1,5,10)
  areaPapeles: AreaPC(6,1,10,9)
  areaFinal: AreaC(10,10,10,10)
  InicioFloreros: AreaPC(6,10,7,10)
  InicioPapeleros: AreaPC(8,10,9,10)
robots
  robot tipo1
  variables
    valorAvenida:numero
    valorCalle:numero
    av:numero
    ca:numero
    flores:numero
  comenzar
    av:= PosAv
    ca:=PosCa
    flores:= 0
    repetir 5
      Random(valorAvenida,1,5)
      Random(valorCalle,1,10)
      BloquearEsquina(valorAvenida,valorCalle)
      Pos(valorAvenida,valorCalle)
      juntarFlores(flores)
      Pos(av,ca)
      LiberarEsquina(valorAvenida,valorCalle)
    depositar(flores,V,av,ca)
  fin
  robot tipo2
  variables
    valorAvenida:numero
    valorCalle:numero
    av:numero
    ca:numero
    papeles:numero
  comenzar
    av:=PosAv
    ca:=PosCa
    papeles:= 0
    repetir 3
      Random(valorAvenida,6,10)
      Random(valorCalle,1,9)
      BloquearEsquina(valorAvenida,valorCalle)
      Pos(valorAvenida,valorCalle)
      juntarPapeles(papeles)
      Pos(av,ca)
      LiberarEsquina(valorAvenida,valorCalle)
    depositar(papeles,F,av,ca)
  fin
variables
  robot1:tipo1
  robot2:tipo1
  robot3:tipo2
  robot4:tipo2
comenzar
  AsignarArea(robot1,areaFlores)
  AsignarArea(robot1,InicioFloreros)
  AsignarArea(robot1,areaFinal)
  AsignarArea(robot2,areaFlores)
  AsignarArea(robot2,InicioFloreros)
  AsignarArea(robot2,areaFinal)
  AsignarArea(robot3,areaPapeles)
  AsignarArea(robot3,InicioPapeleros)
  AsignarArea(robot3,areaFinal)
  AsignarArea(robot4,areaPapeles)
  AsignarArea(robot4,InicioPapeleros)
  AsignarArea(robot4,areaFinal)
  Iniciar(robot1,6,10)
  Iniciar(robot2,7,10)
  Iniciar(robot3,8,10)
  Iniciar(robot4,9,10)
fin
